@page "/coursework"
<PageTitle>Coursework</PageTitle>

<style>
    .course-list h3 {
        font-size: 1.1rem;
    }
    
    .course-list h3 a {
        text-decoration: none;
    }

    .semester-header {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.4rem;
        color: #333;
    }

    .semester-courses {
        list-style-type: none;
        padding-left: 0;
    }

    .course-item {
        margin-bottom: 1rem;
    }
</style>

<section class="course-list">
    <h1>Thoughts on some of my Techs</h1>
    
    @foreach (var semester in coursesBySemester.OrderByDescending(s => s.Key))
    {
        <div class="semester-section">
            <h3 class="semester-header">@semester.Key</h3>
            <ul class="semester-courses">
                @foreach (var course in semester.Value)
                {
                    <li class="course-item">
                        <h3>
                            <a href="@course.NotesLink" target="_blank">
                                @course.Name
                            </a>
                        </h3>
                        <p>@course.Description</p>
                    </li>
                }
            </ul>
        </div>
    }
</section>

